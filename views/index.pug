extends layout

block content
    div#intro
        h1= title
        p Welcome to #{title}: The Social Game played together with friends!
        p Record questions and earn Swisscom credits to pay your phone bill.

    div#game
        button#startgame.btn.btn-primary.btn-lg Start
        h1#voicepermission Please allow sound recording to proceed.
        div#gamecontainer
            h2 Never Have I Ever
            h2
            div#questioncontainer
            button.control#previousbutton.btn.btn-primary
                i.material-icons chevron_left
            div#mic
                button.control#micbutton.btn.btn-primary.btn-circle
                    i.fa.fa-microphone
                div#micicon
                        i.fa.fa-microphone
            button.control#nextbutton.btn.btn-primary
                i.material-icons chevron_right




    //-
      form(method='POST' action='/new-question')
        div.form-group
          label(for='Question') Your Question:
          input#question.form-control(type='text', placeholder='Your Question' name='name')
        button.btn.btn-primary(type='submit') Create New Question
